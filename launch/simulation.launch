<?xml version="1.0"?>
<launch>
  <!--<arg name="world_file"  default="$(env TURTLEBOT_GAZEBO_WORLD_FILE)"/>-->
  <arg name="world_file"  default="$(find cnc-stummeldriver)/world/distributed_systems_simple.world"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>
  
  <!-- Map server -->
  <arg name="map_file" default="$(find cnc-stummeldriver)/maps/department_sim.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
	  <param name="frame_id" value="/map" />
  </node>
 
  <!-- Localization -->
  <node pkg="fake_localization" type="fake_localization" name="fake_localization">
  	<param name="odom_frame_id"   value="odom"/>
     <param name="base_frame_id"   value="base_link"/>
     <remap from="base_pose_ground_truth" to="odom"/>
  </node>

  <group ns="stummel">
    <param name="tf_prefix" value="stummel"/>
    <include file="$(find cnc-stummeldriver)/launch/Stummel_Simulation.launch"/>
  </group>

</launch>
